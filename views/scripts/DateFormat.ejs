function ISO8601ToYMDTime(dateISO) {
    const dateDMY = dateISO.toLocaleString('en-GB', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
    second: '2-digit',
    hour12: false
    }).replace(',', '').replace(/\//g, '-');

    return dateDMY;
}

function DMYToYMDTime(dateDMY) {
    return dateDMY.replace(/(\d{2})-(\d{2})-(\d{4}) (\d{2}):(\d{2}):(\d{2})/, '$3-$2-$1 $4:$5:$6');
}

function DateToDateString(date) {
    return date.toISOString().split('T')[0];
}

function DateToTimeString(date) {
    const hours = String(date.getHours()).padStart(2, '0');
    const minutes = String(date.getMinutes()).padStart(2, '0');
    const seconds = String(date.getSeconds()).padStart(2, '0');
    return `${hours}:${minutes}:${seconds}`;
}

function getCurrentTHDatetime() {
    let todayDate = new Date();
    todayDate.setHours(todayDate.getHours() + 7);
    return todayDate;
}