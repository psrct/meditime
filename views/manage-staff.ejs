<%-include("head")%>
<style>
    .manage-icon i{
        color: rgb(47, 46, 46);
        font-size: 21px;
        text-decoration: none;
    }

    .manage-icon i:hover{
        text-decoration:underline;
        background-color: rgba(0, 0, 0, .1);
    }

    #bin{
        color: rgb(219, 0, 0);
    }
    #edit{
        color: rgb(0, 225, 68);
    }
</style>
<body>
    <%-include("sidebar-owner")%>
    <%-include("main-content-top")%>
    <div class="container">
        <h1>รายชื่อแพทย์</h1>
        <a href="/add-staff %>" class="btn btn-primary">เพิ่มข้อมูลแพทย์</a><br><br>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <!-- <th>prename</th>
                    <th>firstname</th>
                    <th>lastname</th> -->   
                    <th>Hire Date</th>
                    <th>Retire Date</th>
                    <th>Contact Number</th>
                    <th>Specialty</th>
                    <th>Username</th>
                    <th>Password</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach((item) => { %>
                    <tr>
                        <td><%= item.prename %> <%= item.firstname %> <%= item.lastname %></td>
                        <!-- <td><%= item.firstname %></td>
                        <td><%= item.lastname %></td> -->
                        <td><%= item.hire_date %></td>
                        <td><%= item.retire_date %></td>
                        <td><%= item.contact_number %></td>
                        <td><%= item.name %></td>
                        <td><%= item.username %></td>
                        <td><%= item.password %></td>
                        <td>
                            <p>
                                <a href="/edit-staff/<%= item.doctor_id %>" class="manage-icon"><i class="lni lni-pencil-1" id="edit">&nbsp</i></a>
                                <a href="/remove-staff/<%= item.doctor_id %>" class="manage-icon"><i class="lni lni-trash-3" id="bin"></i></a>
                            </p>
                        </td>
                    
                    </tr>
                <% }) %>
            </tbody>
            <script>
                console.log("<%=data%>");
            </script>
        </table>
    </div>
    <%-include("main-content-bottom")%>
    <%-include("script-toggle-sidebar")%>
</body>
</html>