<%-include("head")%>

<body>
    <%-include("sidebar-owner")%>
    <%-include("main-content-top")%>
    <div class="container">
        <h1>ID: <%= user.id %></h1><br>
        <h1>Hello <%= user.username %></h1>
        <a href="/add-staff %>" class="btn btn-primary">Add Staff</a><br><br>
