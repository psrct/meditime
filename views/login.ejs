<%-include("head")%>
<style>
    nav{
        background: #999074;
    }
    .p-3{
        padding: 0 0 0 0;
        background: url(hospital.jpg) no-repeat;
        background-size: cover;
        background-position: center;
    }
    #main-content{
        display: flex;
        justify-content: center;
        align-items: center;
        height: 86vh;
       
    }

    .login{
        width: 420px;
        background: transparent;
        color: white;
        border-radius: 12px;
        padding: 30px 40px;
        border: solid 2px rgba(255, 255, 255, .5);
        backdrop-filter: blur(15px);
    }

    .login h1{
        font-size: 36px;
        text-align: center;
    }

    .login .login_box_input{
        position: relative;
        width: 100%;
        height: 50px;
        margin: 30px 0;
    }

    .login_box_input input{
        width: 100%;
        height: 100%;
        background: transparent;
        outline: none;
        border: 2px solid rgba(255, 255, 255, .2);
        border-radius: 40px;
        padding: 20px 45px 20px 20px;
        color: white;
    }

    .login_box_input input::placeholder{
        color: white;
    }


    .login_box_input i{
        position: absolute;
        right: 10px;
        top: 30%;
        transform: translate(-50%);
        font-size: 30px;
    }

    .login_content .login_button{
        width: 100%;
        height: 45px;
        background: white;
        border: none;
        outline: none;
        border-radius: 40px;
        box-shadow: 0 0 10px rgba(255, 255, 255, .1);
        cursor: pointer;
        font: 16px;
        font-weight: 500;
    }

    .login_content .login_other{
        font-size: 14.5px;
        text-align: center;
        margin: 20px 0 15px;
    }

    .login_other a{
        color: white;
        text-decoration: none;
        font-weight: 600;
    }

    .login_other a:hover{
        text-decoration: underline;
    }

</style>
<body>
    <%-include("sidebar")%>
    <%-include("main-content-top")%>
    <div class="login">
        <!-- <img src="Fuji.jpg" alt=""> -->
        
        <form action="/login" method="post" class="login_form">
            <div class="login_title">
                <h1>เข้าสู่ระบบ</h1>
            </div>

            <div class="login_content">
                <!-- <div class="login_box">
                    <i class="ri-user-3-line login__icon"></i>
                </div> -->

                <div class="login_box_input">
                    <input id="username" class="login_input" type="text" name="username" placeholder="Username" required>
                    <i class="lni lni-user-4"></i>
                    <!-- <label for="username" class="login_label">Username</label> -->
                </div>

                <div class="login_box_input">
                    <!-- <label for="password" class="login_label">Password</label> -->
                    <input id="password" class="login_input" type="password" name="password" placeholder="Password" required>
                    <i class="lni lni-locked-2"></i>
                    <!-- <i class="ri-eye-off-line login__eye"></i> -->
                </div>

                <input class="login_button" type="submit" value="เข้าสู่ระบบ">

                <p class="login_other">
                    ยังไม่มีบัญชี? <a href="/register">สมัครสมาชิก</a>
                </p>
                <p class="login_other">
                    เข้าสู่ระบบในฐานะพนักงาน? <a href="/login-staff">เข้าสู่ระบบ</a>
                </p>


            </div>
        </form>

    </div>
    <%-include("main-content-bottom")%>
    <%-include("script-toggle-sidebar")%>
</body>
</html>