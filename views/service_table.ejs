<%-include("head")%>
<body>
    <%-include("sidebar")%>
    <%-include("main-content-top")%>
    <table class="table table-striped table-*-responsive">
        <thead>
            <tr>
                <th>สถานะ</th>
                <th>ชื่อบริการ</th>
                <th>ประเภท</th>
                <th>ระยะเวลา</th>
                <th>ราคา</th>
            </tr>
        </thead>
        <tbody>
            <% data.forEach((item)=>{ %>
                <tr>
                    <td id="status" style="font-weight:bold; color: <%= item.status === 'Active' ? 'green' : (item.status === 'Inactive' ? 'red' : 'black') %>;">
                        <%=item.status%>
                    </td>
                    <td><%=item.service_name%></td>
                    <td><%=item.category_name%></td>
                    <td>
                        <% if (item.duration >= 60) { %>
                            <%=( Math.floor( item.duration / 60) )%> ชั่วโมง
                        <% } %>
                        <%=( Math.floor( item.duration % 60) )%> นาที
                    </td>
                    <td><%=item.price.toLocaleString()%> บาท</td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <%-include("main-content-bottom")%>
    <%-include("script-toggle-sidebar")%>
</body>
</html>