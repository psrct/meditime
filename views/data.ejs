<%- include("head") %>

  <body>
    <h1>Table Of Task</h1>
    <table>
      <thead>
        <tr>
          <th>ID</th>
          <th>RoomID</th>
          <th>ServiceID</th>
          <th>PatientID</th>
          <th>DoctorID</th>
          <th>Start</th>
          <th>End</th>
          <th>Completed?</th>
        </tr>
      </thead>

      <tbody>
        <% data.forEach((item)=> { %>
          <tr>
            <td>
              <%= item.task_id %>
            </td>
            <td>
              <%= item.room_id %>
            </td>
            <td>
              <%= item.service_id %>
            </td>
            <td>
              <%= item.patient_id %>
            </td>
            <td>
              <%= item.doctor_id %>
            </td>
            <td>
              <%= item.start_datetime %>
            </td>
            <td>
              <%= item.end_datetime %>
            </td>
            <td>
              <%= item.is_completed ? "✅" : "❌" %>
            </td>
          </tr>
          <% }) %>
      </tbody>
    </table>
  </body>

  </html>