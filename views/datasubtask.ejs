<%- include("head") %>

    <!-- <body style="background-image: url('/public/Fuji.jpg');"> -->
        <% if(user.usertype == "doctor"){ %>
            <%-include("sidebar-doctor")%>
        <% }else { %>
            <%-include("sidebar-owner")%>
        <% } %>
            <%-include("main-content-top")%>
                <div class="container mt-4">
                    <h1 class="mb-3">ประวัติการรักษา</h1>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    <th>รหัส</th>
                                    <th>ห้อง</th>
                                    <th>ชื่อผู้ป่วย</th>
                                    <th>ชื่อบริการ</th>
                                    <th>วัน/เวลาที่เรื่ม</th>
                                    <th>วัน/เวลาที่เสร็จสิ้น</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% data.forEach((item)=> { %>
                                    <tr>
                                        <td>
                                            <%= item.task_id %>-<%= item.subtask_no %>
                                        </td>
                                        <td>
                                            <%= item.room_name %> (<%= item.room_id %>)
                                        </td>
                                        <td>
                                            <%= item.patient_name %>
                                        </td>
                                        <td>
                                            <%= item.service_name %> (<%= item.service_id %>)
                                        </td>
                                        <td>
                                            <%= item.start_datetime %>
                                        </td>
                                        <td>
                                            <%= item.end_datetime %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <%-include("main-content-bottom")%>
                    <%-include("script-toggle-sidebar")%>
    </body>

    </html>